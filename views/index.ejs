<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <title>URL Shortener</title>
</head>

<body>
    <div class="container mt-3">
        <h1>URL Shortener</h1>
        <form action="/shortUrls" method="post" class="my-4 form-inline">
            <label for="fullurl" class="sr-only">Ful URL</label>
            <input type="text" name="fullurl" id="fullurl" placeholder="URL" type="url" class="form-control mr-2 col">
            <button type="submit" class="btn btn-success">Shorten URL</button>
        </form>

        <table class="table table-striped table-responsive col">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>

            <% shortUrls.forEach(shortUrl => { %>

            <tbody>
                <tr>
                    <td>
                        <a href="<%= shortUrl.full %>"><%= shortUrl.full  %></a>
                    </td>
                    <td>
                        <a href="/<%= shortUrl._id %>"><%= shortUrl.short %></a>
                    </td>
                    <td>
                        <%= shortUrl.clicks %>
                    </td>
                </tr>
            </tbody>

            <% })  %>
        </table>
    </div>
</body>

</html>